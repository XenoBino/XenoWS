cflags   = -Wall -Wextra -Wno-unused-parameter -Wno-unused-variable -std=gnu17 -pedantic
ldflags =
buildir = build/

rule cc
  command = gcc $cflags -c $in -o $out

rule ld
  command = gcc $ldflags $in -o $out

build build/int/date.o: cc src/date.c
build build/int/die.o: cc src/die.c
build build/int/main.o: cc src/main.c
build build/int/oom.o: cc src/oom.c
build build/xenows: ld build/int/date.o build/int/die.o build/int/main.o build/int/oom.o
